{# Plantilla #}
{% extends 'base.html.twig' %}

{# TITULO #}
{% block titulo %}
    Registro Usuario
{% endblock %}
{# CONTENIDO #}
{% block contenido %}
<!-- Page Content -->
<div class="container">
    <h1 class="mt-4 mb-3">Reservas</h3>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Editar</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Num Comensales</th>
                        <th scope="col">Observaciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for reserva in reservas %}
                        <tr>
                            <th scope="row"><a href="{{ path('nuevaReserva',{'id':reserva.id}) }}"><i class="fas fa-marker"></i></a></th>
                            <td>{{reserva.fecha| date('Y/m/d h:i')}}</td>
                            <td>{{reserva.comensales}}</td>
                            <td>{{reserva.observaciones}}</td>
                        </tr>
                        
                    {% endfor %}

                </tbody>
            </table>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>
{% endblock %}
